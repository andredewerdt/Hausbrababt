- var taal = 'DE' 
if taal == 'NL' 
  include ./include/reservering/var_reserveringNL.pug
  include ./include/links.pug
if taal == 'DE'
  include ./include/reservering/var_reserveringDE.pug
  include ./include/linksDE.pug
if taal == 'EN'  
  include ./include/reservering/var_reserveringEN.pug
  include ./include/linksEN.pug

doctype html
html
  head
    include ./include/head.pug
  body#Home
    overlay.appartement.start-overlay
    .container
      .header
        .figure.effect-menu
          img(src="images/header/appartementen.jpg")
          figcaption
            h2 Haus
              span  Brabant
            p= koptextsub
      .nav-container
        nav
          div
            button(type="button" data-target="#myNavbar").menubutton
              span.icon-bar
              span.icon-bar
              span.icon-bar
            div
              a.navbar-brand.pull-left.grow(href="#")
          div#myNavbar
            ul
              li.nav-link
                a(href= HomeKnop data-bg="appartement") Home
              li.nav-link
                a(href="#section-2" data-bg="appartement")= Reservering
              li.nav-link.pull-left.topicon
                a(href="#section-1" data-bg="appartement")
                  img(src='images/top.svg')
          div.fblogo
            a(href="https://www.facebook.com/brabantsegezelligheid/" target='new')
              img(src='images/fb.png')
          div.taal
            .de
              a(href="reserveringDE.html")
                img(src="images/de.png")
            .nl
              a(href="reservering.html")
                img(src="images/nl.png")
            .en
              a(href="reserveringEN.html")
                img(src="images/en.png")
          .nav-left
          .nav-right
      .mainbody
        section#section-1
        section#section-2
          .row
            .divider
            .col-lg-12
              .editcms
                if taal == 'NL' 
                  include ./include/reservering/html_reserveringNL.pug
                if taal == 'DE'
                  include ./include/reservering/html_reserveringDE.pug
                if taal == 'EN'  
                  include ./include/reservering/html_reserveringEN.pug
                if taal == 'NL' 
                  include ./include/easybookV2.html
                if taal == 'DE' 
                  include ./include/easybookV2DE.html
                if taal == 'EN' 
                  include ./include/easybookV2EN.html
        .footer
          p
            | Haus Brabant (c) 2016 fam v. Schijndel
      include ./include/mobilenav.pug
include ./include/footer.pug
